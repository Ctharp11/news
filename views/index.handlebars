<h1 class="sub-sub-title"> Home </h1>
    <div class="saved-bubble">
        <p class="saved-text" value="{{this.id}}"> Article Saved </p>
    </div>

<div class="container"> 

    <div class="articles"> 
    {{#each results}}
        <div id="art">
            <div id="title"> 
                {{this.title}}
                <br>
                <form>
                  <button value-title="{{this.title}}" value-link="{{this.link}}" class="btn btn-success save" >Save Article</button>
                </form>
            </div>
            <div id="link">
               <a href="{{this.link}}" target="_blank"> {{this.link}} </a>
            </div>
        </div>
    {{/each}}
