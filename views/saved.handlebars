<div class="navbar">
  <img class="image" src="/images/sportsbro.jpg" alt="sport bro">

  <h1> Sports Bro Mongo Scraper</h1>
 
  <h3> Your Bleacher Report sports news generator! </h3>

  <div class="subhead"> 
    <a class="home" href="/"> Home </a>
    <a class="saved" href="/saved"> Saved Articles </a>
  </div>
</div>

<div class="container"> 

    <div class="articles"> 
    {{#each article}}
        {{!-- <div class="saved-bubble">
            <p class="saved-text" value="{{this.id}}"> Saved </p>
        </div> --}}
        <div id="art">
            <div id="title"> 
                {{this.title}}
                <br>
                <form>
                  <button value-id="{{this._id}}" class="btn btn-success delete" >Delete</button>
                </form>
            </div>
            <div id="link">
               <a href="{{this.link}}" target="_blank"> {{this.link}} </a>
            </div>
        </div>
    {{/each}}
    <div> 
</div>